<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.Sales">
        <LinearLayout
            android:id="@+id/Basic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="25dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp">
                <TextView
                    android:text="My Cart"
                    android:gravity="center"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/order1"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.8"
        android:visibility="invisible"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/productNumberText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        </TextView>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/productCodeText"
                android:text="Production"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/priceText"
                android:text="Production"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/order2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_weight="1.8"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/productNumberText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="4.5">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/productCodeText2"
                android:text="Production"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/priceText2"
                android:text="Production"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_weight="1.8"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/productNumberText3"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="4.5">
            </TextView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/productCodeText3"
                android:text="Production"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="8dp">
            <TextView
                android:text="Production"
                android:id="@+id/priceText3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/moreProduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="More Products"
        android:layout_weight="2">
    </TextView>
    <TextView
        android:id="@+id/removeAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="Remove All"
        android:layout_weight="2">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total"
            android:gravity="left"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="10dp">
        </TextView>

        <TextView
            android:id="@+id/toplamText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Toplam">

        </TextView>

    </LinearLayout>


    <androidx.constraintlayout.utils.widget.MotionButton
        android:id="@+id/contactUsBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ConfÄ±rm Cart And Contact Us"
        app:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_weight="1.8">
    </androidx.constraintlayout.utils.widget.MotionButton>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9">
    </View>


</LinearLayout>